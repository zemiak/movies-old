<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <container qualifier="wildfly_managed" default="true">
        <configuration>
            <property name="javaVmArguments">-Djboss.socket.binding.port-offset=9</property>
            <property name="managementPort">9999</property>
            <property name="outputToConsole">false</property>
            <property name="javaHome">/opt/java/jdk</property>
        </configuration>
    </container>

    <extension qualifier="persistence-dbunit">
        <property name="qualifiedTableNames">true</property>
    </extension>

</arquillian>
