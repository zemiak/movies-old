<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN" "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.ffmpeg"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="/usr/bin/ffmpegthumbnailer"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.path"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="/mnt/media/Movies/"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.imgPath"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="/home/sites/movies/img/movie/"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.mp4info"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="/usr/bin/mp4info"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.mp4tags"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="/usr/bin/mp4tags"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.mailFrom"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="movies@lenovo-server.local"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.mailTo"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="zemiak@zemiak.com"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.mailSubject"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="Movies: Batch Results"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.backendUrl"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="http://lenovo-server.local:8080/movies/"></property>
    </custom-resource>

    <custom-resource res-type="java.lang.String" jndi-name="com.zemiak.movies.development-system"
                     factory-class="org.glassfish.resources.custom.factory.PrimitivesAndStringFactory">
        <property name="value" value="false"></property>
    </custom-resource>

    <jdbc-connection-pool
        datasource-classname="org.postgresql.ds.PGSimpleDataSource"
        res-type="javax.sql.DataSource" name="ZemiakMovies__pool">
      <property name="portNumber" value="5432"></property>
      <property name="databaseName" value="movies"></property>
      <property name="serverName" value="movies-db"></property>
      <property name="user" value="movies_user"></property>
      <property name="password" value="movies/0"></property>
    </jdbc-connection-pool>

    <jdbc-resource pool-name="ZemiakMovies__pool" jndi-name="jdbc/ZemiakMovies"></jdbc-resource>

    <mail-resource host="lenovo-server.local" jndi-name="mail/default"
                   from="anonymous@zemiak.com" user="anonymous">
    </mail-resource>
</resources>
