#/bin/sh

mvn -q clean || exit 1
#mvn -q integration-test || exit 2
mvn -q package  || exit 3
if [ $? -eq 0 ]
then
    cp ./target/movies.war ./src/main/setup/docker/
    cd ./src/main/setup/docker
    docker stop movies
    docker rm movies
    docker build -tag movies . || exit 4
    docker run movies
    cd ../../..
fi
